{
  "compilerOptions": {
    "target": "ES6",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "isolatedModules": true,
    "noEmitOnError": true,
    "jsx": "react"
  },
  "exclude": ["./node_modules", "./scripts", "./var"]
}
